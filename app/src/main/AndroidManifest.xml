<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="arksoft.com.budgetmanager">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_shopping_list"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".IncomeActivity" />
        <activity android:name=".ExpenseActivity" />
        <activity android:name=".CreditCardActivity" />
        <activity android:name=".CreateAccountActivity" />
        <activity android:name=".Graph" />
        <activity android:name=".OpenApp" />
        <activity android:name=".CalendarActivity" />
        <activity android:name=".About" />
        <activity android:name=".Calculator" />
        <activity android:name=".HesapMakinesi" />
        <activity android:name=".VergiHesaplama" />
        <activity android:name=".Dovizler" />
        <activity android:name=".BorcActivity"></activity>


        <receiver android:name=".AlarmReceiver">
            <intent-filter>
                <action android:name="android.media.action.DISPLAY_NOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

    </application>

</manifest>